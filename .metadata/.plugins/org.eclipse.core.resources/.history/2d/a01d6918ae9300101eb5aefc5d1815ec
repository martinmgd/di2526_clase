package com.jdojo.intro;

import javafx.application.Application;
import javafx.application.Platform;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class ImprovedHelloFXApp extends Application{
	public static void main (String[]args) {
		Application.launch(args);
	}
	
	@Override
	public void start(Stage stage) {
	
		//Elementos da IU
		Label nameLbl = new Label("Introduce o teu nome");
		TextField nameFld = new TextField();
		//Esta vai ser a etiqueta da mensaxe do botón
		Label msg = new Label();
		msg.setStyle("-fx-text-fill: blue;");
		
		//Creamos os botóns
		Button btnOla = new Button("Dicir Ola");
		Button btnSair = new Button("Sair");
		
		//Crear controlador para manexar o evento dos botóns
		btnOla.setOnAction(e ->{
			String nome = nameLbl.getText();
			if(nome.trim().length() > 0) {
				msg.setText("Ola" + nome);
			}
			else {
				msg.setText("Ola descoñecido");
			}
		});
		btnSair.setOnAction(e -> Platform.exit());
	
		
		//Creamos un nodo raíz VBox y le añadimos todos sus hijos
		VBox root = new VBox();
		root.getChildren().addAll(nameLbl, nameFld, msg, btnOla, btnSair);
		
		//Creamos unha escena especificando nodo e tamaño
		Scene scene = new Scene(root, 400, 150);
		stage.setScene(scene);
		
		//Mostramos o escenario
		stage.show();
		
	}
}
